<!doctype html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <style type="text/css">
    body {
        width: 100%;
    }
    .container {
        width:70%;
    }
    .doc-container {
        background-color: #eee;
        -webkit-border-radius: 10px;
        padding: 10px;
        margin-top: 5px;
    }
    .nav {
        width: 100%;
        height: 15px;
    }
    .button {
        border: 1px solid #eee;
        -webkit-border-radius: 10px;
        padding: 0px 10px;
        float: right;
    }

    .button:hover {
        background-color: #eee;
        cursor: pointer;
    }
    </style>
    <script type="text/javascript">
        (function () {
            window.addEventListener("load", function (ev) {
                var elm = document.getElementById("dlbutton");
                elm.addEventListener("click", function (ev) {
                    location.href = "/download/" + "<%= title %>";
                });
            });
        })()
    </script>
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>
        <div class='nav'>
            <span class="button" id="dlbutton"><i class="icon-download-alt"></i>download</span>
        </div>
        <div class="doc-container">
            <%- data %>
        </div>
    </div>
</body>
</html>
